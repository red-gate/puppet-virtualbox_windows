$adapter_properties = (& '<%= scope['::virtualbox_windows::vboxmanage'] %>' list -l hostonlyifs) `
  -join '##' `
  -split '####' `
  -like 'Name:*<%= @adapter_name %>##*' `
  -split '##'

if(!($adapter_properties -like 'DHCP:*Enabled')) {
  # DHCP is not enabled. return 0
  exit 0
}

# DHCP is already set. return 1
exit 1
